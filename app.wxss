/* app.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #1890ff;
  color: white;
  border-radius: 40rpx;
  margin: 20rpx 0;
  font-size: 32rpx;
}

.btn:active {
  background-color: #40a9ff;
}

.drone-container {
  width: 100%;
  height: 600rpx;
  position: relative;
  margin: 20rpx 0;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  overflow: hidden;
}

.control-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 20rpx;
}

.speed-up {
  background-color: #52c41a;
  color: white;
}

.speed-down {
  background-color: #ff4d4f;
  color: white;
}

.control-panel {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
}

.status-info {
  margin: 20rpx 0;
  font-size: 28rpx;
  color: #666;
}

.login-container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f2f5;
}

.login-btn {
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #07c160;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}
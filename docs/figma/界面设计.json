  "components": {
    "unit": {
      "name": "单位组件（菜狗/狼）",
      "props": {
        "size": {
          "dog": 80,
          "wolf": 60
        },
        "borderRadius": {
          "dog": 40,
          "wolf": 30
        },
        "colors": {
          "dog": "#52C41A",
          "wolf": "#FF6B9D",
          "fastWolf": "#FFD93D",
          "cooperativeWolf": "#9254DE"
        },
        "directions": {
          "left_up": 225,
          "left_down": 135,
          "right_up": 315,
          "right_down": 45
        }
      },
      "states": {
        "idle": {
          "scale": 1,
          "opacity": 1,
          "animation": "gentle-bounce"
        },
        "selected": {
          "scale": 1.1,
          "opacity": 1,
          "shadow": "0 12px 24px rgba(0,0,0,0.2)",
          "border": "3px solid #FF6B9D"
        },
        "running": {
          "scale": 1,
          "opacity": 1,
          "animation": "running-wobble"
        },
        "disappeared": {
          "scale": 0,
          "opacity": 0,
          "animation": "fade-out"
        }
      },
      "directionIndicator": {
        "size": 20,
        "shape": "arrow",
        "color": "#333333",
        "backgroundColor": "rgba(255,255,255,0.8)",
        "borderRadius": 4,
        "position": "top-right"
      }
    },
    "button": {
      "name": "按钮组件",
      "props": {
        "primary": {
          "width": 120,
          "height": 48,
          "backgroundColor": "linear-gradient(135deg, #FF6B9D, #FF8FB1)",
          "color": "#FFFFFF",
          "fontSize": 16,
          "fontWeight": "bold",
          "borderRadius": 24,
          "shadow": "0 4px 12px rgba(255,107,157,0.3)"
        },
        "secondary": {
          "width": 120,
          "height": 48,
          "backgroundColor": "#FFFFFF",
          "color": "#FF6B9D",
          "fontSize": 16,
          "fontWeight": "bold",
          "border": "2px solid #FF6B9D",
          "borderRadius": 24,
          "shadow": "0 2px 8px rgba(0,0,0,0.1)"
        },
        "circle": {
          "size": 48,
          "backgroundColor": "rgba(255,107,157,0.1)",
          "borderRadius": 24
        }
      },
      "states": {
        "normal": {
          "scale": 1,
          "opacity": 1
        },
        "hover": {
          "scale": 1.05,
          "opacity": 1
        },
        "pressed": {
          "scale": 0.95,
          "opacity": 0.9
        },
        "disabled": {
          "scale": 1,
          "opacity": 0.5,
          "cursor": "not-allowed"
        }
      }
    },
    "progressBar": {
      "name": "进度条组件",
      "props": {
        "width": 280,
        "height": 8,
        "backgroundColor": "#F0F0F0",
        "borderRadius": 4,
        "fillColor": "linear-gradient(90deg, #FF6B9D, #FFD93D)",
        "animation": "smooth-transition"
      }
    },
    "modal": {
      "name": "弹窗组件",
      "props": {
        "width": 320,
        "height": "auto",
        "backgroundColor": "#FFFFFF",
        "borderRadius": 16,
        "shadow": "0 8px 32px rgba(0,0,0,0.2)"
      },
      "sections": {
        "header": {
          "height": 60,
          "padding": 16,
          "borderBottom": "1px solid #F0F0F0"
        },
        "body": {
          "padding": 24,
          "minHeight": 100
        },
        "footer": {
          "height": 60,
          "padding": 16,
          "borderTop": "1px solid #F0F0F0"
        }
      }
    }
  },

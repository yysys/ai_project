/* index.wxss */
.container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx 0;
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.app-subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.features {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  width: 100%;
  margin-bottom: 60rpx;
}

.feature-item {
  width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  text-align: center;
}

.feature-desc {
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.start-btn {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  background-color: #1890ff;
  color: white;
  border-radius: 45rpx;
  font-size: 36rpx;
  margin-bottom: 40rpx;
  border: none;
}

.start-btn::after {
  border: none;
}

.user-info {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  width: 100%;
  justify-content: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.username {
  font-size: 24rpx;
  color: #333;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .feature-item {
    width: 100%;
    flex-direction: row;
    justify-content: flex-start;
    padding: 0 20rpx;
  }
  
  .feature-icon {
    margin-right: 20rpx;
    margin-bottom: 0;
  }
  
  .feature-title {
    text-align: left;
  }
  
  .feature-desc {
    text-align: left;
  }
}

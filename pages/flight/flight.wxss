/* flight.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 20rpx 0;
  color: #333;
}

.status-panel {
  display: flex;
  justify-content: space-around;
  background-color: #f5f5f5;
  border-radius: 15rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.status-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.status-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.drone-container {
  width: 100%;
  height: 600rpx;
  position: relative;
  margin: 20rpx 0;
  background-color: #e6f7ff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drone-image {
  width: 200rpx;
  height: 200rpx;
  z-index: 10;
  transition: transform 0.3s ease;
}

.map-background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.6;
}

.map-background image {
  width: 100%;
  height: 100%;
}

.control-panel {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40rpx 0;
}

.control-btn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin: 0 40rpx;
  border: none;
}

.control-btn::after {
  border: none;
}

.speed-up {
  background-color: #52c41a;
  color: white;
}

.speed-down {
  background-color: #ff4d4f;
  color: white;
}

.gyro-status {
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
}

.gyro-label {
  font-size: 24rpx;
  color: #666;
}

.gyro-value {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

.tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 20rpx;
}

/* 响应式设计 */
@media (max-height: 800px) {
  .drone-container {
    height: 400rpx;
  }
}

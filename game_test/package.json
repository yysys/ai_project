{
  "name": "game-test",
  "version": "1.0.0",
  "description": "Test suite for the game",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^26.6.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../game/utils/**/*.js",
      "!../game/utils/logger.js",
      "!../game/utils/fileLogger.js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/setup.js"]
  }
}

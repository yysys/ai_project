.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #a8e063 0%, #56ab2f 100%);
}

.top-bar {
  height: 60px;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
  color: white;
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: white;
}

.placeholder {
  width: 32px;
  height: 32px;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.result-message {
  margin-bottom: 30px;
}

.result-text {
  font-size: 32px;
  font-weight: bold;
  color: #FF6B9D;
  text-align: center;
}

.result-text.lose {
  color: #6b7280;
}

.mascot {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, #FFD700 0%, #FFA500 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  border: 4px solid #FFD700;
  margin-bottom: 30px;
}

.mascot-emoji {
  font-size: 120px;
}

.stars-display {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}

.star {
  font-size: 40px;
  color: #FFD700;
}

.score-display {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.score-label {
  font-size: 24px;
  font-weight: bold;
  color: #3b82f6;
}

.score-value {
  font-size: 28px;
  font-weight: bold;
  color: #3b82f6;
}

.reward-display {
  margin-bottom: 20px;
}

.reward-text {
  font-size: 20px;
  font-weight: bold;
  color: #10b981;
}

.bottom-bar {
  height: 120px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20px;
}

.btn-primary {
  width: 180px;
  height: 50px;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8E53 100%);
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(255, 107, 157, 0.4);
}

.btn-primary text {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.btn-primary:active {
  transform: scale(0.95);
}

.btn-secondary {
  width: 180px;
  height: 50px;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.btn-secondary text {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.btn-secondary:active {
  transform: scale(0.95);
}

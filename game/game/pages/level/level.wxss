.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #a8e063 0%, #56ab2f 100%);
}

.top-bar {
  height: 60px;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24px;
  color: white;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: white;
}

.placeholder {
  width: 32px;
  height: 32px;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.level-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 20px;
  padding: 20px;
}

.level-node {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: transform 0.15s ease-out;
}

.level-node:active {
  transform: scale(0.95);
}

.level-node.unlocked {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border: 3px solid #fff;
  box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
}

.level-node.locked {
  background: #9ca3af;
  border: 3px solid #6b7280;
}

.level-node.completed {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  border: 3px solid #fff;
  box-shadow: 0 4px 15px rgba(255, 215, 0, 0.4);
}

.level-number {
  font-size: 24px;
  font-weight: bold;
  color: white;
}

.stars {
  display: flex;
  gap: 2px;
  margin-top: 4px;
}

.star {
  font-size: 12px;
  color: #FFD700;
}

.lock-icon {
  position: absolute;
  font-size: 20px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.bottom-bar {
  height: 60px;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.stars-info {
  font-size: 18px;
  font-weight: bold;
  color: white;
}

.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #a8e063 0%, #56ab2f 100%);
}

.top-bar {
  height: 60px;
  padding: 10px 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.placeholder {
  width: 32px;
  height: 32px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: white;
}

.icon-btn {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20px;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
}

.mascot {
  width: 200px;
  height: 200px;
  background: radial-gradient(circle, #FFD700 0%, #FFA500 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  border: 4px solid #FFD700;
  margin-bottom: 40px;
}

.mascot-emoji {
  font-size: 120px;
}

.slogan {
  font-size: 20px;
  font-weight: bold;
  color: white;
  text-align: center;
}

.bottom-bar {
  height: 120px;
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  width: 200px;
  height: 60px;
  background: linear-gradient(135deg, #FF6B9D 0%, #FF8E53 100%);
  border-radius: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 15px rgba(255, 107, 157, 0.4);
  transition: transform 0.15s ease-out;
}

.btn-primary:active {
  transform: scale(0.95);
}

.btn-primary text {
  font-size: 20px;
  font-weight: bold;
  color: white;
}

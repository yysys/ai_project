<view class="container">
  <view class="top-bar">
    <view class="icon-btn" bindtap="goBack">
      <text>←</text>
    </view>
    <text class="level-title">{{levelName}}</text>
    <view class="time-display" wx:if="{{isTimed}}">
      <text>⏱️ {{timeRemaining.toFixed(1)}}s</text>
    </view>
  </view>

  <view class="game-area">
    <canvas 
      type="2d" 
      id="gameCanvas" 
      class="game-canvas"
      bindtouchstart="handleCanvasTouch"
    ></canvas>
    
    <view class="pause-overlay" wx:if="{{isPaused}}">
      <text class="pause-text">游戏暂停</text>
      <view class="btn-secondary" bindtap="resumeGame">
        <text>继续游戏</text>
      </view>
    </view>
  </view>

  <view class="bottom-bar">
    <view class="btn-icon" bindtap="resetGame">
      <text>🔄</text>
    </view>
    <view class="btn-icon" bindtap="pauseGame" wx:if="{{!isPaused}}">
      <text>⏸️</text>
    </view>
    <view class="btn-icon" bindtap="resumeGame" wx:if="{{isPaused}}">
      <text>▶️</text>
    </view>
  </view>
</view>
